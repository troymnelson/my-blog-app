<div class="author">
    <h1 class="author__heading">Hi, I'm Troy.</h1>
    <p class="author__body">Web Developer</p>
</div>

<img src="/img/hero-image.webp" alt="person looking out through a window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>

        <li>
            <a href="#">
                <span class="article-list__title"><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>

        <% }) %>
    </ul>

    <a href="#" class="pagination">&lt; View Older Posts</a>

</section>